{
  "name": "contract-rag-manager",
  "version": "1.3.2",
  "description": "AI-Powered Contract Analysis with Conversational RAG Interface",
  "author": "RandomWilder",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "release": "electron-builder --publish=always",
    "release:ci": "electron-builder --publish=onTagOrDraft --config.forceCodeSigning=false"
  },
  "build": {
    "appId": "com.covenantrix.contract-rag-manager",
    "productName": "Covenantrix",
    "directories": {
      "buildResources": "buildResources",
      "output": "dist"
    },
    "icon": "buildResources/icon",
    "asarUnpack": [
      "**/*.node"
    ],
    "win": {
      "icon": "buildResources/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "publisherName": "Covenantrix",
      "verifyUpdateCodeSignature": false,
      "sign": null,
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "mac": {
      "icon": "buildResources/icon.icns",
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "identity": null,
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null,
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Covenantrix"
    },
    "dmg": {
      "writeUpdateInfo": false,
      "format": "UDZO"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "RandomWilder",
        "repo": "Covenantrix",
        "private": false,
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "@google-cloud/vision": "^5.3.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.6.2",
    "mammoth": "^1.10.0",
    "openai": "^4.28.0",
    "pdf-parse": "^1.1.1",
    "pdf-poppler": "^0.2.1",
    "rtf-parser": "^1.3.3",
    "sharp": "^0.33.2",
    "tesseract.js": "^5.0.4",
    "uuid": "^9.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.13.3"
  }
}
