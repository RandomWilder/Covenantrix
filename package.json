{
  "name": "contract-rag-manager",
  "version": "1.0.5",
  "description": "Smart Contract Management System with RAG Framework",
  "author": "RandomWilder",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "release": "electron-builder --publish=always",
    "release:ci": "electron-builder --publish=onTagOrDraft --config.forceCodeSigning=false"
  },
  "build": {
    "appId": "com.covenantrix.contract-rag-manager",
    "productName": "Contract RAG Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "publisherName": "Covenantrix",
      "verifyUpdateCodeSignature": false,
      "artifactName": "${productName}-${version}-Setup.${ext}"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "artifactName": "${productName}-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Contract RAG Manager"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "publish": [
      {
        "provider": "github",
        "owner": "RandomWilder",
        "repo": "Covenantrix",
        "private": false,
        "releaseType": "release"
      }
    ]
  },
  "dependencies": {
    "electron-updater": "^6.6.2"
  },
  "devDependencies": {
    "electron": "^25.3.0",
    "electron-builder": "^24.13.3"
  }
}